        <p>list one</p>
        <p>list two</p>
        <div class="fold" id="fold">
            <p>list more</p>
        </div>
        <a href="javascript:;" class="linkbtn" onclick="showdiv()" id="btn">展开</a>
    </div>

</div>
<script>
    function showdiv(){
        document.getElementById('fold').style.display = 'block';
        document.getElementById('btn').text = '收起';
        document.getElementById('btn').onclick = hidediv;
    }
    function hidediv(){
        document.getElementById('fold').style.display = 'none';
        document.getElementById('btn').text = '展开';
        document.getElementById('btn').onclick = showdiv;
    }

    //parentNode nextSibling
</script>
